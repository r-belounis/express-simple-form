<div class="container">
    <div class="row">
        <div class="col-6">
            {{!-- Title for students list --}}
            <h1>{{titleStudents}}</h1>
            {{!-- List of added students  --}}
            <ul>
                {{#each students}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            {{!-- Title for students list --}}
            <h1>{{titleForm}}</h1>
            {{!-- form for adding students --}}
            <form method="post" action="students/add">
                <input name="username" />
                <button type="submit">Send</button>
            </form>
        </div>
    </div>
</div>
